<div style='width: 80%; margin-left: 30px; margin-top: 30px;'>
  <%= form_for @gossip do |f| %>
  <%= label_tag 'Title:' %>
  <%= f.text_field :title, placeholder: 'Your title...', class: "form-control", id: "formGroupExampleInput2" %>
  <br /><br />
  <%= label_tag 'Content:' %>
  <%= f.text_area :content, placeholder: 'Your content...', class: "form-control", id: "formGroupExampleInput2" %>
  <br /><br />
    <%= label_tag 'Author:' %>
  <%= f.text_area :anonymous_gossiper, placeholder: 'Your username...', class: "form-control", id: "formGroupExampleInput2" %>
  <br /><br />
  <%= f.submit "Add the Gossip", class: "btn btn-success"  %>
<% end %>
